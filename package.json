        }
    ],
    "engines": {
        "node": "*"
    },
    "scripts": {
    },
    "bin": {
        "kirin-rebuild-kirin-kit": "./bin/rebuild_kirinkit.sh",
        "kirin-create": "./bin/kirin-create.js"
    },
    "kirin": {
        "directories": [
            "Kirin/core/common/javascript/src"            
        ],
        "dependencies": [
            "underscore"
        ],
	    "platforms": {
		    "ios": {
			    "project": "Kirin/core/ios/KirinKit/KirinKit.xcodeproj"
		    },
		    "android": {}
	    },
	    "extensions": {
	        "kirin": "Kirin/core/common/javascript/src/core/kirin",
	        "Native": "Kirin/core/common/javascript/src/core/Native",
	        "Settings": "Kirin/core/common/javascript/src/services/Settings"
	    }
    },
    "dependencies": {
        "underscore": ">= 1.3.1",
        "progenitor": "git://github.com/KirinJS/progenitor.git",
        "JSON": "*"
    },
    "devDependencies": {
        "nodeunit": "*"
    },
    "keywords": [
        "mobile",
        "crossplatform",
        "native",
        "apps"
    ]
