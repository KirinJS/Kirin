
    <resources>
        <style name="root_background">
            <item name="android:background">@drawable/bg_gradient</item>
        </style>
        <style name="generic_textview">
            <item name="android:typeface">sans</item>
            <item name="android:textColor">@color/default_text_color</item>
            <item name="android:shadowColor">@color/text_shadow_color</item>
            <item name="android:shadowRadius">1.5</item>
            <item name="android:shadowDy">1.5</item>
        </style>
        <style name="generic_button">
            <item name="android:padding">@dimen/btn_padding</item>
            <item name="android:textSize">@dimen/btn_text_size</item>
        </style>
        <style name="generic_listview">
            <item name="android:cacheColorHint">#00000000</item>
            <item name="android:scrollbars">none</item>
        </style>
    </resources>
